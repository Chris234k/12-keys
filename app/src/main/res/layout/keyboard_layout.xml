<?xml version="1.0" encoding="utf-8"?>
<com.chris234k.keys12.Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.chris234k.keys12.Key
            android:id="@+id/key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\@-_/1"
            app:down="1"
            app:left="-"
            app:right="/"
            app:tap="\@"
            app:up="_" />

        <com.chris234k.keys12.Key
            android:id="@+id/key2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABC2"
            app:down="2"
            app:left="b"
            app:tap="a"
            app:up="c" />

        <com.chris234k.keys12.Key
            android:id="@+id/key3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DEF3"
            app:down="3"
            app:left="e"
            app:tap="d"
            app:up="f" />

    </TableRow>

    <TableRow
        android:id="@+id/two"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:translationY="50dp">

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GHI" />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JKL" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MNO" />
    </TableRow>

    <TableRow
        android:id="@+id/three"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:translationY="100dp">

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PQRS" />

        <Button
            android:id="@+id/button10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TUV" />

        <Button
            android:id="@+id/button11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WXYZ" />

    </TableRow>

    <TableRow
        android:id="@+id/four"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:translationY="150dp">

        <Button
            android:id="@+id/button12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A^" />

        <Button
            android:id="@+id/button13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="'&quot;:;" />

        <Button
            android:id="@+id/button14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=".,?!" />
    </TableRow>

</com.chris234k.keys12.Keyboard>